@model IEnumerable<semifinishAdmin.Models.siixsem_cgs_programs_t>

@{
    ViewBag.Title = "Programas de Cogiscan";
}

<div class="window">
    <div class="window-title">Programas cogiscan</div>
    <div class="window-content">

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table id="tblCgsProgrs" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>PROGRAM</th>
                    <th>BIN</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.se_description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.se_bin)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.se_id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.se_id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.se_id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>